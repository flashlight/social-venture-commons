<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"
	"http://www.w3.org/TR/html4/strict.dtd">

<html>
	<head>
		<meta http-equiv="Content-type" content="text/html; charset=utf-8">
		<title>Ventwits</title>
		
		<%= stylesheet_link_tag "blueprint/screen", "global" %>
		<%= javascript_include_tag :defaults, 'jeditable' %>
		
		<%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
	</head>

	<body>
		<div id="header">
			<div class="vtcontainer">
				<div class="vtspan-2"><h1>Ventwits</h1></div>

				<div id="main-nav" class="vtspan-3">
					<%= link_to 'All Ventures', '/' %>
					<%= link_to 'My Ventures', 'user/show' %>
				</div>
			
				<div class="vtspan-3 vtlast">
					<%- form_tag('search') do -%>
						<%= text_field_tag 'search' %>
						<%= submit_tag 'Search' %>
					<%- end -%>
				</div>
			</div>
		</div>

		<div class="vtcontainer">
			<div>
        <%= flash[:notice] %>
      </div>
			<%= yield %>
		</div>
		<div id="footer">
			Footer
		</div>
	</body>
</html>